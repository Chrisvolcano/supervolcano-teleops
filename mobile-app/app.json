{
  "expo": {
    "name": "SuperVolcano Camera",
    "slug": "supervolcano-camera",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.supervolcano.camera",
      "buildNumber": "6",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to record videos at work locations.",
        "NSMicrophoneUsageDescription": "This app needs microphone access to record videos with audio.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.supervolcano.camera",
      "permissions": ["CAMERA", "RECORD_AUDIO"]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SuperVolcano to access your camera to record videos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "88f8aa67-5bcd-49af-8bee-f4502c1d1ff7"
      }
    }
  }
}
